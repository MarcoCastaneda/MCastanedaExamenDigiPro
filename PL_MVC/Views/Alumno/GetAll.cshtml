
@model ML.Alumno
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h2>Alumno</h2>
    </div>A
</div>


@using (Html.BeginForm("GetAll", "Alumno", FormMethod.Post, new { enctype = "multipart/form_data" }))
{

}

<div class="row">
    <div class="col-md-12">
        <h5>Seleccione un Usuario para editarlo o + para agregar...</h5>
        <hr />
    </div>
</div>



<div>
    <div class="row">
        <div style="float:right;">
            @Html.ActionLink("+", "Form", "Alumno", htmlAttributes: new { @class = "btn btn-success" })

        </div>
    </div>
    <table class="table table-bordered table-responsive">
        <thead>
            <tr>
                <td>Editar</td>
                <td class="hidden" IdUsuario></td>

                <td>Nombre</td>

                
                <td>Eliminar</td>
            </tr>
        </thead>
        <tbody>
            @foreach (ML.Alumno alumno in Model.Alumnos)
            {
                <tr>
                    <td><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("GetAll", "AlumnoMaterias", new { IdAlumno = alumno.IdAlumno })"></a></td>
                    <td class="hidden" @alumno.IdAlumno></td>

                    <td>@alumno.Nombre @alumno.ApellidoPaterno @alumno.ApellidoMaterno</td>


                   
                    
                    <td><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Alumno", new { IdAlumno= alumno.IdAlumno})" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"></a></td>
                </tr>
            }



        </tbody>
    </table>
</div>


